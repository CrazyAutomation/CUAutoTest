#parse("/array.java.vm")
#if ($packageName)
package $packageName;

#end
import org.junit.AfterClass;
import org.junit.BeforeClass;
import org.junit.runner.RunWith;
import io.cucumber.junit.CucumberOptions;
import com.cu.util.DriverFactory;
import com.cu.cukes.TestBase;
import io.cucumber.junit.Cucumber;
import com.cu.cukes.CustomCucumberRunner;

@RunWith(CustomCucumberRunner.class)
@CucumberOptions(

        features = {"$featureFile"},
        plugin = #stringArray($plugins),
        monochrome = $monochrome,
#if(!$featureFile.contains(".feature:") && $tags.init().tail())
        tags = #stringArray($tags),

#end

       glue = #stringArray($glue.substring(14,26)))
public class $className {

    @AfterClass
    public static void afterClass(){
      DriverFactory.closeDriver();
    }
}